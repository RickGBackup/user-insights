<%= form_for @registered_app do |f| %> 
  <% if @registered_app.errors.any? %>
    <div class = "alert alert-danger">
      <h4><%= pluralize(@registered_app.errors.count, "error") %>.</h4>
      <ul>
      <% @registered_app.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :url, "App URL:" %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter the URL of the app" %>
  </div>
  
  <div class="form-group">
    <%= f.label :name, "App Name" %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter the App's name" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Register App", class: 'btn btn-success' %>
  </div>
<% end %>